                                            $term = $this->Html->concat(' ', $term, ($term == 1 ? $this->Html->ifSet($periods[$price->period]) : $this->Html->ifSet($periods[$price->period . '_plural'])));
                                        }

                                        // Set the pricing text to include or not include the renewal pricing
