                                            $this->Form->fieldRadio('addon[' . $this->Html->_($addon_group->id, true) . '][pricing_id]', $this->Html->_($price->id, true), $this->Html->ifSet($vars->addon[$addon_group->id]['pricing_id']) == $price->id);
