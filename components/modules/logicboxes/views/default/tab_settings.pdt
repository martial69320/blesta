            <li>
                <?php
                $this->Form->fieldCheckbox('request_epp', 'true', $this->Html->ifSet($vars->request_epp) == 'true', ['id' => 'request_epp']);
                $this->Form->label($this->_('Logicboxes.tab_settings.field_request_epp', true), 'request_epp', ['class' => 'inline']);
