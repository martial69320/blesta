    <?php
    $this->Form->end();
    ?>

    <script type="text/javascript">
        $(document).ready(function() {

            showEpp();
            $("#request_epp").change(function() {
                showEpp();
            });

            function showEpp() {
                if ($("#request_epp").is(":checked"))
                    $(".epp_code").show();
                else
                    $(".epp_code").hide();
            }
        });
    </script>